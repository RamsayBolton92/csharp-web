@using BeautyAndThePet.Common
@model BeautyAndThePet.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Pets dating pets!</p>
    <p>@Model.AboutUs</p>
    @if (this.User.Identity.IsAuthenticated)
    {
        <a asp-controller="Pets" asp-action="Create" class="btn btn-primary">Create pet</a>
        <a asp-controller="Pets" asp-action="MyPets" class="btn btn-primary">My pets</a>
        @*<a asp-controller="Speaker" asp-action="Index">Donate</a>*@


    }
    else
    {
        <p>To visit us, you must <a asp-area="Identity" asp-page="/Account/Register">register</a>
           or <a asp-area="Identity" asp-page="/Account/Login">login</a> if you already have an account</p>
        @*<a asp-controller="Speaker" asp-action="Index">Donate</a>*@
    }

</div>
