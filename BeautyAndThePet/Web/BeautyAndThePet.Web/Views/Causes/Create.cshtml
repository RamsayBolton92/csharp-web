@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model BeautyAndThePet.Web.ViewModels.Causes.CreateCauseInputModel
@{
    this.ViewData["Title"] = "Create new cause";
}

<form method="post" class="col-md-6 offset-md-3 font h5" enctype="multipart/form-data">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Funds"></label>
        <input asp-for="Funds" class="form-control" />
        <span asp-validation-for="Funds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankAccount"></label>
        <input asp-for="BankAccount" class="form-control" />
        <span asp-validation-for="BankAccount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountOwner"></label>
        <input asp-for="AccountOwner" class="form-control" />
        <span asp-validation-for="AccountOwner" class="text-danger"></span>
    </div>
    <hr />
    Created by: @Model.Creator
    <hr />
    <div class="form-group">
        <label asp-for="StartOfPeriod"></label>
        <input asp-for="StartOfPeriod" class="form-control" />
        <span asp-validation-for="StartOfPeriod" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndOfPeriod"></label>
        <input asp-for="EndOfPeriod" class="form-control" />
        <span asp-validation-for="EndOfPeriod" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    @*<input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />*@
    <input type="submit" class="btn btn-warning" />
</form>

