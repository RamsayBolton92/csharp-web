@model BeautyAndThePet.Web.ViewModels.Pets.AllPetsListViewModel
@{
    this.ViewData["Title"] = "All pets";
}

<h1>@this.ViewData["Title"]</h1>

@foreach (var pet in Model.AllPets)
{
    <div class="media">
        <img src="..." width="100" class="mr-3" alt="...">
        <div class="media-body">
            <h5 class="mt-0">@pet.Name</h5>
            <p>@pet.TypeOfPet</p>
            <p>@pet.Breed</p>
            <p>@pet.Sex</p>
            <p>@pet.AvailableFrom</p>
            <p>@pet.AvailableTo</p>
        </div>
    </div>
}

@*Pagination*@
<hr />
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPrevousPage) { <text>disabled}</text>}" >
            <a class="page-link" asp-action="All" asp-route-id="@Model.PrevousPageNumber">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.Page
                <span class="sr-only">(current)</span>
            </span>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled}</text>}">
            <a class="page-link" asp-action="All" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>

