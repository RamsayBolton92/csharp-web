@using BeautyAndThePet.Data.Models.Enumerations
@model BeautyAndThePet.Web.ViewModels.Pets.CreatePetInputModel
@{
    this.ViewData["Title"] = "Create new pet";
}

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h1>@this.ViewData["Title"]</h1>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sex"></label>
        <select asp-for="Sex" class="form-control" asp-items="@Html.GetEnumSelectList<Sex>()"></select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TypeOfPet"></label>
        <select asp-for="TypeOfPet" class="form-control" asp-items="@Html.GetEnumSelectList<TypeOfPet>()"></select>
        <span asp-validation-for="TypeOfPet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Breed"></label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate.Date"></label>
        <input asp-for="BirthDate.Date" class="form-control" />
        <span asp-validation-for="BirthDate.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SexualStimulus.Start"></label>
        <input asp-for="SexualStimulus.Start" class="form-control" />
        <span asp-validation-for="SexualStimulus.Start" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SexualStimulus.End"></label>
        <input asp-for="SexualStimulus.End" class="form-control" />
        <span asp-validation-for="SexualStimulus.End" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />

</form>

