@using BeautyAndThePet.Web.ViewModels
@model AdsListViewModel
@{
    if (Model.Ads.Any())
    {
        this.ViewData["Title"] = "All Ads";
    }
    else
    {
        this.ViewData["Title"] = "No Ads :(";
    }
}

<h1>@this.ViewData["Title"]</h1>

@foreach (var ad in Model.Ads)
{
    <div>
        <div>
            <p>@ad.Text</p>
            <p>From: @ad.ApplicationUser</p>
            <p>Sent On: @ad.SentOn</p>
        </div>
        <hr />
    </div>
}