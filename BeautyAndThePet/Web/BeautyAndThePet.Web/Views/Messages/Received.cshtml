@using BeautyAndThePet.Web.ViewModels.Messages
@model MessagesListViewModel
@{
    if (Model.Messages.Any())
    {
        this.ViewData["Title"] = "Received messages";
    }
    else
    {
        this.ViewData["Title"] = "You have no received messages yet";
    }
}

@foreach (var message in Model.Messages)
{
    <div>
        <h1>@this.ViewData["Title"]</h1>
        <div>
            <p>@message.From</p>
            <p>@message.Text</p>
            <p>@message.SentOn</p>
        </div>
        <a class="btn btn-primary" asp-controller="Messages" asp-action="ReadReceivedMessage" asp-route-id="@message.Id">Read</a>
        <a class="btn btn-warning" asp-controller="Messages" asp-action="NewEmpty" asp-route-to="@message.From">Reply</a>
        <hr />
    </div>
}