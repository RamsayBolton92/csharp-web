@model BeautyAndThePet.Web.ViewModels.Messages.MessageInputViewModel
@{
    ViewData["Title"] = "New message";
}

<form method="post" id="editForm" class="col-md-6 offset-md-3 ">

    <h1>@ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    @*<div class="form-group">
            <label asp-for="SentOn"></label>
            <input asp-for="SentOn" class="form-control" />
            <span asp-validation-for="SentOn" class="text-danger"></span>
        </div>*@

    <hr />
    <input type="hidden" asp-for="Id" />


    <a asp-controller="Pets" asp-action="MyPets" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-warning" @*data-toggle="modal" data-target="#modalEdit"*@>Send</button>
</form>

